<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AIDemonV2.Views.RightPanelView">
	<Grid RowDefinitions="Auto,*">
		<!-- Przyciski Save/Action/Remove -->
		<StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
			<Button Content="Save" Background="#444444" Foreground="White" Margin="0,0,5,0"/>
			<Button Content="Action" Background="#444444" Foreground="White" Margin="0,0,5,0"/>
			<Button Content="Remove" Background="#444444" Foreground="White"/>
		</StackPanel>

		<!-- Edytor kodu -->
		<TextBox Grid.Row="1"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="10"
                 MaxWidth="600"/>
	</Grid>
</UserControl>
