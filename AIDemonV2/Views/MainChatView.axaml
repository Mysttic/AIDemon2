<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 xmlns:vm="clr-namespace:AIDemonV2.ViewModels"
             x:Class="AIDemonV2.Views.MainChatView">

	<Grid RowDefinitions="*,Auto">

		<!-- Lista wiadomości -->
		<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" x:Name="ChatScrollViewer">
			<ItemsControl ItemsSource="{Binding Messages}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<VirtualizingStackPanel />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Padding="8" Margin="5"
                                Background="{Binding AIModel, Converter={StaticResource AIMessageBackgroundConverter}}"
                                HorizontalAlignment="{Binding IsUserMessage, Converter={StaticResource MessageAlignmentConverter}}">
							<Grid>
								<Grid.RowDefinitions>
									<!-- Wiersz na główną treść wiadomości -->
									<RowDefinition />
									<!-- Wiersz na dolny pasek (data, ikony) -->
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>

								<!-- Górna część (treść) -->
								<StackPanel Grid.Row="0">
									<TextBlock Text="{Binding OriginalMessage}"
											   FontWeight="Bold"
											   Foreground="White"
											   MaxWidth="400"
											   TextWrapping="Wrap"/>
								</StackPanel>

								<!-- Dolna część (data + ikona modyfikacji, przycisk Resend) -->
								<Grid Grid.Row="1" Margin="0,5,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>

									<!-- Ikona/przycisk w lewym dolnym rogu (tylko dla wiadomości użytkownika) -->
									<Button Grid.Column="0"
											Command="{Binding ResendMessageCommand}"
											IsVisible="{Binding IsUserMessage, Converter={StaticResource BoolToVisibilityConverter}}"
											HorizontalAlignment="Left">
										<StackPanel Orientation="Horizontal">
											<!-- Zastąp MaterialIcon czym chcesz -->
											<materialIcons:MaterialIcon Kind="Replay" Width="16" Height="16"/>
											<TextBlock Text="Resend" Margin="5,0,0,0"/>
										</StackPanel>
									</Button>

									<!-- Nazwa modelu AI (pokazuj tylko, gdy to nie jest wiadomość użytkownika) -->
									<TextBlock Text="{Binding AIModel}"
											   FontSize="10"
											   Foreground="LightBlue"
											   IsVisible="{Binding IsUserMessage, Converter={StaticResource BoolInverseToVisibilityConverter}}"/>

									<!-- Data i ewentualna ikona modyfikacji w prawym dolnym rogu -->
									<StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
										<!-- Data -->
										<TextBlock Text="{Binding CreationDate, StringFormat='HH:mm:ss'}"
												   FontSize="10"
												   Foreground="Gray"/>
										<TextBlock Text="{Binding ModificationDate, StringFormat='HH:mm:ss'}"
												   FontSize="10"
												   Foreground="Gray"
												   IsVisible="{Binding IsModified, Converter={StaticResource BoolToVisibilityConverter}}"/>
									
									</StackPanel>
								</Grid>
							</Grid>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

	</Grid>
</UserControl>
