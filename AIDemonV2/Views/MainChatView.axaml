<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="clr-namespace:AIDemonV2.ViewModels"
             x:Class="AIDemonV2.Views.MainChatView">

	<Grid RowDefinitions="*,Auto">

		<!-- Lista wiadomoÅ›ci -->
		<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" x:Name="ChatScrollViewer">
			<ItemsControl ItemsSource="{Binding Messages}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<VirtualizingStackPanel />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Padding="8" Margin="5"
                                Background="{Binding AIModel, Converter={StaticResource AIMessageBackgroundConverter}}"
                                HorizontalAlignment="{Binding IsUserMessage, Converter={StaticResource MessageAlignmentConverter}}">								
							<StackPanel>
								<TextBlock Text="{Binding OriginalMessage}" 
										   FontWeight="Bold" 
										   Foreground="White" 
										   MaxWidth="400"
                                           TextWrapping="Wrap"/>
								<TextBlock Text="{Binding CreationDate, StringFormat='HH:mm:ss'}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           HorizontalAlignment="Right"/>
								<TextBlock Text="{Binding AIModel}" FontSize="10" Foreground="LightBlue"/>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

	</Grid>
</UserControl>
